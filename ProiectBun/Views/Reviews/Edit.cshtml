@model ProiectBun.Models.Review
@{
    ViewBag.Title = "Edit";
}

<h2>Editare review</h2>
<form method="post" action="/Reviews/Edit/@Model.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label>Continut review</label>
    <br />
    <textarea name="Comment">@Model.Comment</textarea>
    <br /><br />
    @Html.Label("Rating")
    <br />
    @Html.Editor("Rating", new { htmlAttributes = new { @class = "form-control"} })
    <button class="btn btn-success" type="submit">Editeaza comentariu</button>
</form>

