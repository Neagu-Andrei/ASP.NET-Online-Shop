@model ProiectBun.Models.Category

<h2>Editare categorie</h2>

<form method="post" action="/Categories/Edit/@Model.Id">

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.Id)

    @Html.Label("Name", "Denumire categorie")
    <br />
    @Html.Editor("Name")
    <br /><br />

    <button class="btn btn-success" type="submit">Modifica categoria</button>
</form>

